@{
    Layout = null;
}

<head lang="en">
    <meta charset="UTF-8">
    <title>登录</title>
    <meta name="format-detection" content="telephone=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link href="~/AmazeUI-2.4.2/assets/css/amazeui.css" rel="stylesheet" />
    <link href="~/Contcent/Css/dlstyle.css" rel="stylesheet" />
</head>
<div class="login-boxtitle">
    <a>@* logo预留 *@</a>
</div>

<div class="login-banner">
    <div class="login-main">
        <div class="login-banner-bg"><span></span>@* 图片预留 *@</div>
        <div class="login-box">

            <h3 class="title">登录云笔记</h3>

            <div class="clear"></div>
            <form>
                <div class="login-form">

                    <div class="user-name">
                        <label for="user"><i class="am-icon-user"></i></label>
                        <input type="text" name="user" id="user" placeholder="邮箱/手机/用户名">
                    </div>
                    <div class="user-pass">
                        <label for="password"><i class="am-icon-lock"></i></label>
                        <input type="password" name="password" id="password" placeholder="请输入密码">
                    </div>

                </div>

                <div class="login-links">
                    <label for="remember-me"><input id="remember-me" type="checkbox">记住密码</label>
                    <a href="#" class="am-fr">忘记密码</a>
                    <a href="/Home/Register" class="zcnext am-fr am-btn-default">注册</a>
                    <br />
                </div>
                <div class="am-cf">
                    <input type="submit" name="" value="登 录" class="am-btn am-btn-primary am-btn-sm">
                </div>
            </form>
            <div class="partner">
                <h3>合作账号</h3>
                <div class="am-btn-group">
                    <ul>
                        <li><a href="#"><i class="am-icon-qq am-icon-sm"></i><span>QQ登录</span></a></li>
                        <li><a href="#"><i class="am-icon-weibo am-icon-sm"></i><span>微博登录</span> </a></li>
                        <li><a href="#"><i class="am-icon-weixin am-icon-sm"></i><span>微信登录</span> </a></li>
                    </ul>

                </div>
            </div>

        </div>
    </div>
</div>


@* 脚步 *@


<script src="~/Contcent/JavaScript/jquery.min.js"></script>
<script src="http://malsup.github.io/jquery.form.js"></script>
<script>
    $("form").submit(function (e) {
        e.preventDefault();
        $("form").ajaxSubmit({
            type: 'post',
            url: "@Url.Action("Login")",
            success: function (data) {
                console.log(data);
                if (data.Code !== "0") {
                    alert(data.Msg);
                } else {
                    window.location.href = location.origin;
                }
            },
            error: function () {
                alert("请求失败");
            }
        });
    });

</script>